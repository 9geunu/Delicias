<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="parent"
                    app:layout_constraintRight_toLeftOf="parent"
                    android:padding="8dp"
                    android:text="식당 지도"
                    android:textSize="22sp"
                    tools:layout_editor_absoluteX="45dp"
                    tools:layout_editor_absoluteY="0dp" />

                <ImageButton
                    app:layout_constraintTop_toBottomOf="@+id/tv_toolbar"
                    app:layout_constraintBottom_toTopOf="@+id/tv_toolbar"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="26dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_horizontal"
                    android:background="#FFFFFF"
                    android:src="@android:drawable/ic_menu_search"
                    android:tint="#adb5bd" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.naver.maps.map.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navermap_latitude="37.450050"
            app:navermap_longitude="126.952497"
            app:navermap_zoom="16" />

        <!--TODO MapViewModel DataBinding-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_restaurant_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:background="@drawable/shape_edge"
            android:layout_gravity="center|bottom">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_card_restaurant_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:text="학생회관 식당" />

                <ToggleButton
                    android:id="@+id/btn_favorite"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/selector_favorite" />

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/location"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_card_restaurant_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_card_restaurant_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75-1동 전망대 3층, 4층"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toRightOf="@+id/iv_location"
                    app:layout_constraintTop_toBottomOf="@+id/iv_location"
                    app:layout_constraintBottom_toTopOf="@+id/iv_location"
                    android:layout_marginLeft="6dp"/>

                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/call"
                    app:layout_constraintLeft_toLeftOf="@+id/iv_location"
                    app:layout_constraintTop_toBottomOf="@+id/iv_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000-000-0000"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toRightOf="@+id/iv_call"
                    app:layout_constraintTop_toBottomOf="@+id/iv_call"
                    app:layout_constraintBottom_toTopOf="@+id/iv_call"
                    android:layout_marginLeft="6dp"/>

                <LinearLayout
                    android:id="@+id/ln_division"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="100dp"
                    android:background="#e9ecef"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/ln_division"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="horizontal">

                    <!--TODO android:onClick= 주소 클립보드에 복사-->
                    <LinearLayout
                        android:id="@+id/ln_copy_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="50">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/file_copy"
                            android:layout_marginRight="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="주소 복사"
                            android:textSize="15sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_division_horizontally"
                        android:layout_width="1dp"
                        android:layout_height="23dp"
                        android:background="#e9ecef"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <!--TODO android:onClick= 네이버 길찾기 API 딥링크-->
                    <LinearLayout
                        android:id="@+id/ln_find_road"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="50">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/navigation"
                            android:layout_marginRight="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="길 찾기"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>